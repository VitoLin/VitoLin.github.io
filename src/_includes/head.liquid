<head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% capture pageTitle %} {% if title %}{{ title }} | {{ site.title }}{% else %}{{ site.title }}{% endif %}{% endcapture %}
    {% capture pageDescription %} {% if description %}{{ description }}{% else %}{{site.description}}{% endif %} {% endcapture %}

    <title>{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDescription }}">
    <link rel="author" content="{{ site.authorName }}" href="{{ site.authorUrl }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">

    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/font-awesome.css">

    <!-- syntax highlighting -->
    <link rel="stylesheet" href="/styles/vs2015.min.css">
    <script src="/js/highlight.min.js"></script>

    <script>
        hljs.configure({});
        hljs.highlightAll();
    </script>
</head>
